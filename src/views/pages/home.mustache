<fieldset>
    <form action="/user/store" method="POST" style="display: flex; flex-direction: column; gap: 1rem;">
        <div>
            <label style="display: block;" for="name">Nome</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div>
            <label style="display: block;" for="age">Idade</label>
            <input type="number" id="age" name="age">
        </div>
      <button type="submit">Salvar</button>
    </form>
  </fieldset>

<h2>USUARIOS DO BANCO</h2>
<ul>
    {{#users}}
    <li>
        {{name}} - {{age}} 
        (Primeira letra: {{firstLetterOfName}})
       <a style="text-decoration: none;" href="/user/decrement/{{id}}"> - </a>
       <a style="text-decoration: none;" href="/user/increment/{{id}}"> + </a>
       <a style="text-decoration: none;" href="/user/destroy/{{id}}"> Deletar </a>
    </li>
    {{/users}}
</ul>

